{
  "name": "4temps-tournament",
  "version": "0.0.1",
  "description": "A website to host 4temps tournaments",
  "main": "server/index.js",
  "repository": "git@github.com:SimonKinds/4temps-tournament.git",
  "author": "Simon Kindstr√∂m <simon.kindstrom@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "npm-run-all -p watch:client watch:server",
    "watch:server": "BABEL_ENV=server nodemon src/index.js --exec babel-node",
    "watch:client": "webpack --config config/webpack.dev.js",
    "build": "npm-run-all -p build:*",
    "build:server": "BABEL_ENV=server babel -s -d lib/ src/ ",
    "build:client": "webpack --config config/webpack.prod.js",
    "start:prod": "node lib/index.js",
    "test": "jest",
    "lint": "eslint src/**",
    "lint:fix": "eslint src/** --fix"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "babel-polyfill": "^6.26.0",
    "express": "^4.16.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "semantic-ui-react": "^0.77.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-css-modules": "^3.3.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.4.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "nodemon": "^1.12.5",
    "npm-run-all": "^4.1.2",
    "style-loader": "^0.19.0",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  }
}
