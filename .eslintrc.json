{
    "parser": "@babel/eslint-parser",
    "plugins": [
        "react",
        "flowtype",
        "jest"
    ],
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:flowtype/recommended",
        "plugin:jest/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jest/globals": true
    },
    "rules": {
        "prettier/prettier": [
          "error",
          {},
          {
            "usePrettierc": true
          }
        ]
    }
}
